<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/Theme.DropDown.Dark.Rowan</item>
    </style>

    <style name="MyActionBar"
        parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/rowanbrown</item>
    </style>

    <style name="settings"
        parent="android:Theme.Holo">
 <!--       <item name="android:">30dp</item>-->
    </style>
    <style name="Theme.DropDown.Dark.Rowan"
        parent="android:Widget.ActionBar">
        <item name="android:background">@color/rowanbrown</item>
    </style>
    <style name="myDropDownListView"
        parent="Theme.DropDown.Dark.Rowan">
        <item name="android:background">@color/rowanbrown</item>
    </style>
    <color name="rowanbrown">#3F1A0A</color>
    <color name="rowanbrowndark">#ff1e0f07</color>
</resources>
